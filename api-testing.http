Content-Type: application/json

{
  "webhook_id": "wh_concurrent_{{$randomUUID}}",
  "event_type": "payment_intent.succeeded",
  "provider": "stripe", 
  "provider_payment_id": "pi_concurrent_{{$randomUUID}}",
  "amount": {{$randomInt 10 1000}}
}

